<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='col-md-offset-2'></div>
      <div class='form-movie'>

        <%= nested_form_for @movie, html: { multipart: true, class: 'form-horizontal'} do |f| %>

          <div>
            <% if @movie.errors.any? %>
              <div id='error_explanation'>
                <h2><%= pluralize(@movie.errors.count, 'error') %> prohibited this movie from being saved:</h2>

                <ul>
                <% @movie.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
          </div>

          <div class='form-group'>
            <div class='field'>
              <%= f.label :title %><br>
              <%= f.text_field :title, autofocus: true, maxlength: 150, size: 35, required: true, class: 'form-control', placeholder: 'Enter Movie Title' %>
            </div>
          </div>

          <div class='form-group'>
            <div class='field'>
              <%= f.label :trailer %><br>
              <%= f.text_field :trailer, class: 'form-control', placeholder: 'Enter Movie Trailer Link' %>
            </div>
          </div>

          <div class='form-group'>
            <div class='field'>
              <%= f.label :release_date %><br>
              <%= f.datetime_select :release_date %>
            </div>
          </div>

          <div class='form-group'>
            <div class='field'>
              <%= f.label :duration %><br>
              <%= f.number_field :duration %>
            </div>
          </div>

          <div class='form-group'>
          <p><strong>Select Genre</strong></p>
            <div class='field'>
              <%= f.select :genre, options_for_select(Movie::GENRES.map {|genre| [genre.titleize, genre]}), {include_blank: 'Select One'}, required: true %>
            </div>
          </div>

          <div class='form-group'>
          <p><strong>Select Actors</strong></p>
            <div class='field'>
              <%= f.select :actor_ids, options_for_select(@all_movie_actors, @selected_movie_actors), {}, { multiple: true } %>
            </div>
          </div>

          <div class='clearfix'></div>
          <div class='form-group'>
            <p><strong>Upload Posters</strong></p>
            <div class='form-actions'>
              <%= f.label :attachments %>:
              <%= f.fields_for :attachments do |attachment| %>
                <%= attachment.file_field :image %>
                <%= attachment.link_to_remove 'Remove this attachment' %>
              <% end %>
            </div>
            <div class='form-actions'>
              <%= f.link_to_add 'Add new attachment', :attachments %>
            </div>
          </div>

          <div class='clearfix'></div>
          <div class='form-group'>
            <div class='field'>
              <%= f.label :description %><br>
              <%= f.cktext_area :description, rows: 10 %>
            </div>
          </div>

          <div class='form-group'>
            <div class='actions'>
              <%= f.submit 'Done', class: 'btn btn-lg btn-primary center-block' %>
            </div>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
