<% movies.in_groups_of(4, false).each do |movie_group| %>
  <div class='row'>
  <% movie_group.each do |movie| %>
    <div class='col-md-3'>
      <div class='text-center'>
        <strong><%= title_titleize(movie.title) %></strong>
      </div>
      <div class='movie-info'>
        <% if movie.attachments.present? %>
          <%= link_to(image_tag(movie.attachments.first.image.url(:medium), class: 'img-responsive'), movie) %>
        <% else %>
          <%= link_to(image_tag('shared/poster-not-available.png', size: '250x250', alt: 'Movie Poster Unavailable', class: 'img-responsive'), movie) %>
        <% end %>
      </div>
      <div class='clearfix'></div>
    </div>
  <% end %>
  </div>
  <div class='margin-padded-space'></div>
<% end %>
