<div class='form-search'>
  <%= form_tag '/movies/search', method: 'post', remote: true, class: 'form-inline' do %>
    <div class='form-group'>
      <div class='field'>
        <%= label_tag :title %>
        <div class='clearfix'></div>
        <%= text_field_tag :title, nil, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='field'>
        <%= label_tag :release_date, 'Release Year' %>
        <div class='clearfix'></div>
        <%= number_field_tag :release_date, nil, size: 4, maxlength: 4, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='field'>
        <%= label_tag :actor %>
        <div class='clearfix'></div>
        <%= select_tag :actor, options_for_select(@all_actors), { include_blank: 'Select Actor' } %>
      </div>
    </div>

    <div class='form-group'>
      <div class='field'>
        <%= label_tag :genre %>
        <div class='clearfix'></div>
        <%= select_tag :genre, options_for_select(Movie::GENRES.map { |genre| [genre.titleize, genre] }), { include_blank: 'Select Genre' } %>
      </div>
    </div>

    <div class='form-group margin-padded-space'>
        <span class='glyphicon glyphicon-search'></span>
        <%= submit_tag 'Search', class: 'btn btn-info btn-mini' %>
    </div>
  <% end %>
</div>
