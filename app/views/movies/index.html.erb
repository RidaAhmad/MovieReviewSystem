<% title 'Movies' %>
<div class='container'>
  <div>
    <%= render 'search' %>
  </div>

  <div>
    <%= render 'sort' %>
  </div>

  <% if @movies.present? %>
    <% model_class = Movie %>

    <div class='movie-name'>
      <h1 class='text-center'><%= yield(:title) %></h1>
    </div>

    <div class='row'>
      <div class='col-md-12'>
        <div class='col-md-offset-3'></div>

          <div class='movies-display'>
            <%= render partial: 'movies', locals: { movies: @movies } %>
          </div>

      </div>
    </div>
  </div>

  <div class='movies-pagination'>
    <%= render partial: 'pagination', locals: { movies: @movies } %>
  </div>
  <% else %>
    <div class='margin-padded-space'>
      <div class='text-center'>
        No Movies Found.
      </div>
    </div>
  <% end %>
  <div class='margin-padded-space'></div>
</div>
