<div class='container'>
  <% if @search_results.present? %>
    <div>
      <%= render 'search' %>
    </div>

    <div class='movie-name'>
      <h1 class='text-center'>Search Results</h1>
    </div>

    <div class='row'>
      <div class='col-md-12'>
        <div class='col-md-offset-3'></div>
          <div>
            <%= render partial: 'movies', locals: { movies: @search_results } %>
          </div>
      </div>
    </div>
  </div>
  <% else %>
    No Results Found.
  <% end %>
</div>
