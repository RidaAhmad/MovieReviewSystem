<% movies.each do |movie| %>
  <div class='col-md-3' align='center'>
    <div class='text-center'>
      <strong><%= title_titleize(movie.title) %></strong>
    </div>
    <% if movie.attachments.present? %>
      <%= link_to(image_tag(movie.attachments.first.image.url(:medium)), movie) %>
    <% else %>
      <%= image_tag('shared/poster-not-available.png', size: '250x250', alt: 'Movie Poster Unavailable') %>
    <% end %>
    <div class='clearfix'></div>
    <div align='center' class='movie-info'>
      <%= link_to 'Show', movie, class: 'btn btn-sm btn-success' %>
      <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
<% end %>
