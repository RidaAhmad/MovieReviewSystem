<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='col-md-offset-2'></div>
      <div class='form-devise'>

        <h2 class='form-devise-heading'>Please Sign In</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class='form-group'>
            <div class='field' >
              <%= f.label :email %>
              <div class='clearfix'></div>
              <%= f.email_field :email, pattern: get_email_pattern, autofocus: true, class: 'form-control', placeholder: 'Enter Email Address', required: true %>
            </div>
          </div>

          <div class='form-group'>
            <div class='field'>
              <%= f.label :password %>
              <div class='clearfix'></div>
              <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Enter Password', required: true %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class='form-group'>
              <div class='field'>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end -%>

          <div class='form-group'>
            <div class='actions'>
              <%= f.submit 'Log In', class: 'btn btn-lg btn-primary center-block' %>
            </div>
          </div>

        <% end %>

        <div class='clearfix'></div>
        <%= render "users/shared/links" %>

      </div>
    </div>
  </div>
</div>
