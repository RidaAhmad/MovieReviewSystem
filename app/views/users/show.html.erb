<div class='container'>
  <div class='row'>
    <div class='user-details'>
      <div class='col-md-12'>
        <div class='col-md-offset-1'></div>
        <div class='user-profile'>

          <div class='user-name'>
            <div class='text-center'>
              <h1><%= title_titleize(@user.email) %></h1>
            </div>
          </div>

          <div>
            <%= render partial: 'profile_picture', locals: { picture: @user.attachment } %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
